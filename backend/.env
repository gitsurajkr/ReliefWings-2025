# ReliefWings Backend Configuration

# Server Configuration
PORT=3001
WS_PORT=8081
NODE_ENV=development

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# PostgreSQL Configuration (via Prisma)
DATABASE_URL="postgresql://postgres:mysecretpassword@localhost:5432/reliefwings"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# API Keys for authentication
API_KEY_WEB=web-client-api-key-change-in-production
API_KEY_PI=pi-client-api-key-change-in-production

# Logging
LOG_LEVEL=info
